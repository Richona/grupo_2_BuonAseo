<!DOCTYPE html>
<html lang="en">

  <%- include('../partials/head', {title: 'Login'}) %>

<body class="registro">
  <main class="registro_main">
    <!-- LOGO, TITULO Y SALIDA -->
    <section class="registro__logo-y-titulo">
      <nav class="registro__logo-y-titulo__logo">
        <a href="/"><img class="registro__logo-y-titulo__logo2" src="/img/Logo.png" alt="logo pagina"></a>
      </nav>
      <a class="registro__logo-y-titulo__salida" href="/">x</a>
      <h2 class="registro__logo-y-titulo__titulo">Ingresar</h2>
    </section>
    <!-- INGRESO REDES -->
    <section class="registro__redes">
      <h4 class="registro__redes__titulo">Con su red favorita</h4>
 
        <!--  <article class="registro__redes__containerFB">
          <button class="registro__redes__botonFB">Continuar con <b>Facebook</b></button>
          <img src="/img/login-register/imgFacebook.png" alt="facebook">
        </article>
        <article class="registro__redes__containerGoogle" onClick="clickGoogleSignIn()">
          <button class="registro__redes__botonGoogle" >Continuar con <b>Google</b></button>
          <img src="/img/login-register/imgGoogle.png" alt="Google">
        </article>-->

      <form action="/users/facebookLogin" id="facebook-login" method="POST">
        <input type="hidden" name="facebookEmail" value="">
      </form>
      <form action="/users/googleLogin" id="google-login" method="POST">
        <input type="hidden" name="googleEmail" value="">
      </form>


        <fb:login-button 
        scope="public_profile,email"
        data-size="large"
        data-width="232"
        data-layout="default"
        onlogin="checkLoginState();">
      </fb:login-button>

      
      <article class="registro__redes__containerGoogle">
        <div id="g_id_onload"
          data-client_id="893438789002-ale6m7ln7e0ud8dm3tnt4gabs6hnsftv.apps.googleusercontent.com"
          data-login_uri="http://localhost:3030/users/login"
          data-auto_prompt="false"
          data-callback="handleCredentialResponse">
        </div>
        <div class="g_id_signin"
            data-type="standard"
            data-size="large"
            data-theme="outline"
            data-text="sign_in_with"
            data-shape="rectangular"
            data-logo_alignment="center">
        </div>
      </article>
    </section>
    <!-- LINEA -->
    <section class="registro__lineaVertical">
      <div class="registro__lineaVertical__vertical-one-line"></div>
      <p class="registro__lineaVertical__letraO">o</p>
      <div class="registro__lineaVertical__vertical-two-line"></div>
    </section>
    <!-- INGRESO EMAIL -->
    <section class="registro__email">
      <h4 class="registro__email__titulo">Con su Email</h4>
      <form action="/users/login" method="POST">
        <article class="registro__email__container">
          <input class="registro__email__texto <%= locals.errors && errors.email ? "registro__email__container-inValid" : null %>" value="<%= locals.old && old.email %>" type="email, text" id="email" name="email"
            placeholder="Nombre de usuario o Email*" />
          <img src="/img/login-register/imgEmail.png" alt="">
          <small><%= locals.errors && errors.email && errors.email.msg %></small>
        </article>
        <article class="registro__email__container">
          <input class="registro__email__texto <%= locals.errors && errors.password ? "registro__email__container-inValid" : null %>" value="" type="password" id="" name="password" placeholder="Contraseña*" />
          <div class="password-visible">
            <i class="fas fa-eye" onclick="password_visible('ocultar',this)"></i>
            <i class="fas fa-eye-slash active"  onclick="password_visible('mostrar',this)"></i>
          </div>
          
          <!-- <img src="/img/login-register/imgContraseña.png" alt=""> -->
          <small><%= locals.errors && errors.password && errors.password.msg %></small>
        </article>
        <!-- BOTON INGRESAR -->
        <article class="login-detail__article__containerBotonIngreso">
          <div>
            <input type="checkbox" name="perdio" id="recordarme" value="on"> 
            <label for="recordarme">Recordarme</label>
          </div>
          <button class="registro__email__botonRegistro" type="submit">INGRESAR</button>
        </article>
      </form>
      <!-- REGISTRARSE -->
      <article class="login-detail__cuenta">
        <a href="password-lost" class="registro__cuenta__ingresar">¿Perdió su contraseña?</a>
        <div>
          <p class="registro__cuenta__texto-cuenta">¿Es nuevo en Buon Aseo?</p>
          <a class="registro__cuenta__ingresar" href="formulario"> Registrarse</a>
        </div>
      </article>
    </section>
  </main>
</body>

</html>