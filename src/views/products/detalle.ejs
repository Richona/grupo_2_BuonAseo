<html lang="en">
<%- include('../partials/head', {title: 'Home' }) %>
<script>
    let id = "<%= product.id %>";
    let type = "<%= type %>";
    let name = "<%= product.name %>";
</script>

<script src="/javascripts/editarProducto.js" defer></script>
    <body>
        <%- include('../partials/header') %>
            <main class="detalle_main">
                <section class="detalle_main_section1">
                    <article class="detalle_main_article_img_principal">
                        <img class="detalle_main_article_img_principal_grande" src="<%= product.image %>"
                            alt="imagen del producto">
                        <!--<div class="detalle_main_article_img_secundaria_mobile">
                            <img src="<%= product.image %>" alt="imagen del producto">
                            <img src="<%= product.image %>" alt="imagen del producto">
                            <img src="<%= product.image %>" alt="imagen del producto">
                        </div>-->
                    </article>
                    <article class="detalle_main_article_nombre">
                        <div>
                            <h1>
                                <%= product.name %>
                            </h1>
                            <% if (product.discount > 0) { %>
                                <p class="precio_sin_descuento">$<%= product.price %></p>
                                <p class="precio">$<%= ((product.price)-(product.price * product.discount)/100) %></p>
                            <% } else { %>
                                <p>$<%= product.price %></p>
                            <% } %>
                             
                            <p>Descuento: %<%= product.discount %></p>
                                    <!--<p>Cantidad: <%= product.quantity %>
                                    </p>
                                    <div>
                                        <i class="fa-solid fa-truck"></i><span>Envio: $1.500</span>
                                    </div>-->
                                    
                                    <!--<p>TOTAL: $</p>-->
                        </div>
                        
                            <button class="detalle_main_article_boton_principal addCartBtn" type="button" value="<%= product.id %>">AGREGAR AL CARRITO</button>
                        <% if (locals.adminEntry) { %>
                         
                            <a href="/products/editarProducto/<%= product.id %> ">
                                <button class="detalle_mani_action-button-edit"> EDITAR PRODUCTO</button></a>
                            <button class="detalle_mani_action-button-delete" onClick="alert_eliminar(`<%= product.id %>`,'`<%= product.name %>`')">ELIMINAR</button>
                        
                        <% } %>
                        
                    </article>

                </section>
                <!--<section>
                    <article class="detalle_main_article_img_secundaria_tablet">
                        <img src="<%= product.image %>" alt="imagen del producto">
                        <img src="<%= product.image %>" alt="imagen del producto">
                        <img src="<%= product.image %>" alt="imagen del producto">
                        <img src="<%= product.image %>" alt="imagen del producto">
                        <img src="<%= product.image %>" alt="imagen del producto">
                        <img src="<%= product.image %>" alt="imagen del producto">
                        <img src="<%= product.image %>" alt="imagen del producto">
                    </article>
                </section>-->
                <section class="detalle_main_section2">
                    <article class="detalle_main_article_caracteristica">
                        <div>
                            <h2>CARACTERISTICAS</h2>
                            <p>CATEGORIA</p>
                            <p>AROMA</p>
                            <p>VOLUMEN</p>
                            <p>DIMENCIONES</p>
                            <p>CODIGO</p>

                            <p>STOCK</p>
                        </div>
                        <div>
                            <h2>.</h2>
                            <p>
                                <%= product.category.dataValues.name %>
                            </p>
                            <p>
                                <%= product.smell %>
                            </p>
                            <p>
                                <%= product.volume %>
                            </p>
                            <p>
                                <%= product.dimensions %>
                            </p>
                            <p>
                                <%= product.idCode %>
                            </p>

                            <p>
                                <%= product.stock %>
                            </p>
                        </div>
                    </article>
                    <article class="detalle_main_article_descripcion">
                        <div>
                            <h2>DESCRIPCION</h2>
                            <p>
                                <%= product.description %>
                            </p>
                        </div>
                    </article>
                </section>
                <section class="detalle_main_section3">
                    <article class="detalle_main_article_ofertas">
                        <h3>OFERTAS</h3>
                        <div class="grid">
                            <% ofertasAleatorias.forEach(({id,name,price,image,discount}) => { %>
                            <div class="col">
                                <h4 ><%= name %></h4>
                                <a href="/products/detail/<%= id %>">
                                <img src="<%= image %>"
                                    alt="imagen del producto"></a>
                                </div>
                            <% }) %>
                        </div>
                        <button>
                            <a href="ofertas">ver mas</a>
                        </button>
                    </article>
                    <article class="detalle_main_article_destacados">
                        <h3>DESTACADOS</h3>
                        <div class="grid">
                            <% destacadosAleatorios.forEach(({id,name,price,image,discount}) => { %>
                                <div class="col">
                                    <h4><%= name %></h4>
                                    <a href="/products/detail/<%= id %>">
                                    <img src="<%= image %>"
                                        alt="imagen del producto"></a>
                                    </div>
                            <% }) %>
                        </div>
                        <button>
                            <a href="productosdestacados">ver mas</a>
                        </button>
                    </article>
                </section>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>