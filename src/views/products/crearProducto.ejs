<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', {title: 'Crear Producto'}) %>
<body class="productCrear">
  
    <main class="productCrear_main">
        <!-- LOGO, TITULO Y SALIDA -->
        <section class="productCrear__logo-y-titulo">
          <div class="productCrear__logo-y-titulo__logo">
            <a href="/"><img class="productCrear__logo-y-titulo__logo2" src="/img/Logo.png"
                alt="logo pagina"></a>
                <h2 class="productCrear__logo-y-titulo__titulo">Crear Producto</h2>
          </div>
          <a class="productCrear__logo-y-titulo__salida" href="/">x</a>
        </section>
        <!-- PRODUCTO CREAR EMAIL -->
        <section class="productCrear__email">
          <form action="" method="POST" enctype="multipart/form-data">
            <section class="productCrear__email_section1">
              <article class="productCrear__email__container">
                <label>Nombre del producto</label>
                <input class="productCrear__email__texto <%= locals.errors && errors.name ? "registro__email__container-inValid" : null %>" value="<%= locals.old ? old.name : null %>" type="text" id="" name="name" minlength="2" maxlength="20" placeholder="Nombre">
                <small style="color: red;"><%= locals.errors && errors.name && errors.name.msg %> </small>
              </article>
              <article class="productCrear__email__container">
                <label>Imagen</label>
                <input class="productCrear__email__texto <%= locals.errors && errors.img ? "registro__email__container-inValid" : null %>" value="" type="file" id="imagen" name="imagen"/>
                <small style="color: red;"><%= locals.errors && errors.img && errors.img.msg %> </small>
              </article>
              <article class="productCrear__email__container">
                <label>Categoría</label>
                <select class="productCrear__email__texto" id="categoria" name="categoria" aria-label="Default select example">
                  <option value="" selected hidden>Seleccione...</option>
                  <% categorias.forEach(categoria => { %>
                    <option value="<%= categoria %>" <%= locals.old && old.categoria && categoria === old.categoria ? 'selected' : null %>><%= categoria %></option>
                  <% }) %>         
                </select>
              </article>
              <article class="productCrear__email__container">
                <label>Codigo Id</label>
                <input class="productCrear__email__texto <%= locals.errors && errors.codigoid ? "registro__email__container-inValid" : null %>" value="<%= locals.old ? old.codigoid : null %>" type="text" id="" name="codigoid" minlength="2" maxlength="20" placeholder="ID" >
                <small style="color: red;"><%= locals.errors && errors.codigoid && errors.codigoid.msg %></small>
              </article>
              <article class="productCrear__email__container">
                <label>Dimenciones</label>
                <input class="productCrear__email__texto <%= locals.errors && errors.dimenciones ? "registro__email__container-inValid" : null %>" value="<%= locals.old ? old.dimenciones : null %>" type="text" id="" name="dimenciones" minlength="2" maxlength="20" placeholder="Dimenciones" >
                <small style="color: red;"><%= locals.errors && errors.dimenciones && errors.dimenciones.msg %></small>
              </article>
              <article class="productCrear__email__container">
                <label>Descuento</label>
                <input class="productCrear__email__texto <%= locals.errors && errors.descuento ? "registro__email__container-inValid" : null %>" value="<%= locals.old ? old.descuento: null %>" type="number" id="descuento" name="descuento" minlength="2" maxlength="20" placeholder="Descuento" />
                <small style="color: red;"><%= locals.errors && errors.descuento && errors.descuento.msg %></small>
              </article>
            </section>
           <section class="productCrear__email_section2">
            <article class="productCrear__email__container">
              <label>Precio</label>
              <input class="productCrear__email__texto <%= locals.errors && errors.precio ? "registro__email__container-inValid" : null %>" value="<%= locals.old ? old.precio : null %>" type="number" id="precio" name="precio" minlength="2" maxlength="20" placeholder="Precio" />
              <small style="color: red;"><%= locals.errors && errors.precio && errors.precio.msg %></small>
            </article>
            <article class="productCrear__email__container">
              <label>Volumen</label>
              <input class="productCrear__email__texto <%= locals.errors && errors.volumen ? "registro__email__container-inValid" : null %>" value="<%= locals.old ? old.volumen: null %>" type="text" id="volumen" name="volumen" minlength="2" maxlength="20" placeholder="Volumen" />
              <small style="color: red;"><%= locals.errors && errors.volumen && errors.volumen.msg %></small>
            </article>
            <article class="productCrear__email__container">
              <label>Aroma</label>
              <input class="productCrear__email__texto <%= locals.errors && errors.aroma ? "registro__email__container-inValid" : null %>" value="<%= locals.old ? old.aroma : null %>" type="text" id="aroma" name="aroma" minlength="2" maxlength="20" placeholder="Aroma" />
              <small style="color: red;"><%= locals.errors && errors.aroma && errors.aroma.msg %></small>
            </article>
            <article class="productCrear__email__container">
              <label>Cantidad</label>
              <input class="productCrear__email__texto <%= locals.errors && errors.cantidad ? "registro__email__container-inValid" : null %>" value="<%= locals.old ? old.cantidad : null %>" type="number" id="" name="cantidad" minlength="2" maxlength="20" placeholder="Cantidad" >
              <small style="color: red;"><%= locals.errors && errors.cantidad && errors.cantidad.msg %> </small>
            </article>
            <article class="productCrear__email__container">
              <label>Stock</label>
              <input class="productCrear__email__texto <%= locals.errors && errors.stock ? "registro__email__container-inValid" : null %>" value="<%= locals.old ? old.stock : null %>" type="number" id="" name="stock" minlength="2" maxlength="20" placeholder="Stock">
              <small style="color: red;"><%= locals.errors && errors.stock && errors.stock.msg %> </small>
            </article>
            <article class="productCrear__email__container">
              <label>Tipo</label>
              <input class="productCrear__email__texto <%= locals.errors && errors.tipo ? "registro__email__container-inValid" : null %>" value="<%= locals.old ? old.tipo : null %>" type="text" id="" name="tipo" minlength="2" maxlength="20" placeholder="Tipo"/>
              <small style="color: red;"><%= locals.errors && errors.tipo && errors.tipo.msg %></small>
            </article>
           </section>
            <article class="productCrear__email__container">
              <label>Descripción</label>
              <textarea class="productCrear__email_texto <%= locals.errors && errors.descripcion ? "registro__email__container-inValid" : null %>" rows="5" cols="24" value="" type="text" id="descripcion" name="descripcion"><%= locals.old ? old.descripcion : null %></textarea>
              <small style="color: red;"><%= locals.errors && errors.descripcion && errors.descripcion.msg %></small>
            </article>
    
            <!-- BOTON REGISTRARSE -->
            <article class="productCrear__cuenta">
              <button class="productCrear__email__botonregistro" type="reset">Borrar</button>
              <button class="productCrear__email__botonregistro" type="submit">Crear</button>
            </article>
            
          </form>
        </section>
      </main>
      
    
    </body>
</html>
