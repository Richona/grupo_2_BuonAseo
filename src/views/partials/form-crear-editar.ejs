<body class="productCrear">
  
    <main class="productCrear_main">
        <!-- LOGO, TITULO Y SALIDA -->
        <section class="productCrear__logo-y-titulo">
          <div class="productCrear__logo-y-titulo__logo">
            <a href="/"><img class="productCrear__logo-y-titulo__logo2" src="/img/Logo.png"
                alt="logo pagina"></a>
                <h2 class="productCrear__logo-y-titulo__titulo">Crear Producto</h2>
          </div>
          <a class="productCrear__logo-y-titulo__salida" href="/">x</a>
        </section>
        <!-- PRODUCTO CREAR EMAIL -->
        <section class="productCrear__email">
          <form action="/products/store" method="POST">
            <section class="productCrear__email_section1">
              <article class="productCrear__email__container">
                <label>Nombre del producto</label>
                <input class="productCrear__email__texto" value="" type="text" id="" name="name" minlength="2" maxlength="20" placeholder="Nombre" required/>
              </article>
              <article class="productCrear__email__container">
                <label>Imagen</label>
                <input class="productCrear__email__texto" value="" type="file" id="imagen" name="imagen"/>
              </article>
              <article class="productCrear__email__container">
                <label>Categoría</label>
                <select class="productCrear__email__texto" value="" type="" id="categoría" name="categoría" placeholder="Categoría">
                  <option value="jabon">Jabon</option>
                  <option value="suavisante">Suavizantes</option>
                  <option value="detergente">Detergente</option>
                  <option value="lavandina">Lavandina</option>
                  <option value="liquido/p">Liquido para pisos</option>
                  <option value="pastillaBanio">Pastilla para Banio</option>
                  <option value="papelHigienico">Papel Higienico</option>
                  <option value="jabonTocador">Jabon Tocador</option>
                  <option value="desinfectante">Desinfectante</option>
                  <option value="desengrasante">Desengrasante</option>          
                </select>
              </article>
              <article class="productCrear__email__container">
                <label>Codigo Id</label>
                <input class="productCrear__email__texto" value="" type="text" id="" name="codigoid" minlength="2" maxlength="20" placeholder="ID" required/>
              </article>
              <article class="productCrear__email__container">
                <label>Dimenciones</label>
                <input class="productCrear__email__texto" value="" type="text" id="" name="dimenciones" minlength="2" maxlength="20" placeholder="Dimenciones" required/>
              </article>
              <article class="productCrear__email__container">
                <label>Descuento</label>
                <input class="productCrear__email__texto" value="" type="number" id="descuento" name="descuento" minlength="2" maxlength="20" placeholder="Descuento" />
              </article>
            </section>
           <section class="productCrear__email_section2">
            <article class="productCrear__email__container">
              <label>Precio</label>
              <input class="productCrear__email__texto" value="" type="number" id="precio" name="precio" minlength="2" maxlength="20" placeholder="Precio" />
            </article>
            <article class="productCrear__email__container">
              <label>Volumen</label>
              <input class="productCrear__email__texto" value="" type="text" id="volumen" name="volumen" minlength="2" maxlength="20" placeholder="Volumen" />
            </article>
            <article class="productCrear__email__container">
              <label>Aroma</label>
              <input class="productCrear__email__texto" value="" type="text" id="aroma" name="aroma" minlength="2" maxlength="20" placeholder="Aroma" />
            </article>
            <article class="productCrear__email__container">
              <label>Cantidad</label>
              <input class="productCrear__email__texto" value="" type="text" id="" name="cantidad" minlength="2" maxlength="20" placeholder="Cantidad" required/>
            </article>
            <article class="productCrear__email__container">
              <label>Stock</label>
              <input class="productCrear__email__texto" value="" type="number" id="" name="stock" minlength="2" maxlength="20" placeholder="Stock" required/>
            </article>
            <article class="productCrear__email__container">
              <label>Tipo</label>
              <input class="productCrear__email__texto" value="" type="text" id="" name="tipo" minlength="2" maxlength="20" placeholder="Tipo"/>
            </article>
           </section>
            <article class="productCrear__email__container">
              <label>Descripción</label>
              <textarea class="productCrear__email_texto" rows="5" cols="24" value="" type="text" id="descripcion" name="descripcion"></textarea>
            </article>
    
            <!-- BOTON REGISTRARSE -->
            <article class="productCrear__cuenta">
              <button class="productCrear__email__botonregistro" type="reset">Borrar</button>
              <button class="productCrear__email__botonregistro" type="submit">Crear</button>
            </article>
            
          </form>
        </section>
      </main>
      
    
    </body>